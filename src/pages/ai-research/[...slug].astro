---
import { getCollection, render } from 'astro:content';
import AIResearchLayout from '../../layouts/AIResearchLayout.astro';

export async function getStaticPaths() {
  const articles = await getCollection('aiResearch', ({ data }) => !data.draft);
  return articles.map((article) => ({
    params: { slug: article.id },
    props: { article },
  }));
}

const { article } = Astro.props;
const { Content } = await render(article);
---

<AIResearchLayout
  title={article.data.title}
  description={article.data.description}
  pubDate={article.data.pubDate}
  updatedDate={article.data.updatedDate}
  aiModel={article.data.aiModel}
  researchDate={article.data.researchDate}
  disclaimer={article.data.disclaimer}
  ogImage={article.data.ogImage}
>
  <Content />
</AIResearchLayout>
