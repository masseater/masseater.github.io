---
import TagList from './TagList.astro';

type Props = {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags: string[];
};

const { title, description, pubDate, slug, tags } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' });
};
---

<article class="border-b border-gray-200 dark:border-gray-700 pb-6 mb-6">
  <a href={`/posts/${slug}`} class="block group">
    <h2 class="text-xl font-bold mb-2 group-hover:underline">{title}</h2>
    <p class="text-gray-600 dark:text-gray-400 mb-2">{description}</p>
    <time class="text-sm text-gray-500 dark:text-gray-500" datetime={pubDate.toISOString()}>
      {formatDate(pubDate)}
    </time>
  </a>
  <div class="mt-2">
    <TagList tags={tags} />
  </div>
</article>
